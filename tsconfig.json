{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "paths" : {
      "@app/*" : ["./app/*"],
       "@environments/*" : ["./environments/*"],
       "@inner/*" : ["./app/modules/inner/*"],
       "@outer/*" : ["./app/modules/outer/*"],
       "@modules/*" : ["./app/modules/*"],
       "@endpoint/*" : ["./apis/*"]
    }
  }
}
